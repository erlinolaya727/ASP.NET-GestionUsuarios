@{
  ViewData["Title"] = "Usuario";
}

<form method="post" action="Usuario/Crear">

  <label for="select1" class="form-label">Tipo Documento</label>
  <select id="select1" name="select1" class="custom-select">
    <option value="CC">Cedula</option>
    <option value="TI">TI</option>
    <option value="Pasaporte">Pasaporte</option>
  </select>

  <div class="mb-3">
    <label for="" class="form-label">Numero Documento</label>
    <input id="" name="" placeholder="Numero Documento" type="text" class="form-control">
  </div>


  <div class="mb-3">
    <label for="text" class="form-label">Nombre</label>
    <input id="text" name="text" placeholder="Nombre" type="text" class="form-control">
  </div>

  <div class="mb-3">
    <label for="text1" class="form-label">Apellido</label>
    <input id="text1" name="text1" placeholder="Apellido" type="text" class="form-control">
  </div>

  <div class="mb-3">
    <label for="text2" class="form-label">Correo</label>
    <input id="text2" name="text2" placeholder="Correo" type="text" class="form-control">
  </div>
  
  <div class="mb-3">
    <div class="offset-4 col-8">
      <button name="submit" type="submit" class="btn btn-primary">Enviar</button>
    </div>
  </div>
</form>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
